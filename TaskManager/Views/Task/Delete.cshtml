@model TaskManager.Models.TaskItem

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja excluir esta tarefa?</h3>

<div>
    <h4>Detalhes da Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Descrição:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Concluído:</dt>
        <dd class="col-sm-10">@(Model.IsCompleted ? "Sim" : "Não")</dd>

        <dt class="col-sm-2">Criado em:</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
